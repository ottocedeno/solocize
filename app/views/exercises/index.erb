<div>
  <h2>EXERCISE LIST</h2>
</div>

<div>
  <% @categories.sort_by {|c| c.name }.each do |category| %>
    <div>
      <h3><%= category.name %></h3>
      <% category.exercises.sort_by {|e| e.name }.each do |exercise| %>
        <p><%= exercise.name %> <span><%= exercise.rep_count %> Reps</span><p>
      <% end %>
    </div>
  <% end %>
</div>

<a href="/workouts/new">+</a>
