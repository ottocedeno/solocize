<nav>
  <a href="/workouts">
    <h1>SOLOCIZE</h1>
  </a>
  <div class="user-icon"><%= current_user.user_initials %></div>
  <a href="/logout">Log Out</a>
</nav>

<a href="/workouts/<%= @featured_workout.slug %>">
  <div>
    <h3>FEATURED WORKOUT</h3>
    <p>@<%= @featured_workout.user.username %></p>
    <p><%= @featured_workout.name %></p>
    <p><%= @featured_workout.minutes %> Minutes</p>
  </div>
</a>


<div>
  <h3>MY WORKOUTS</h3>
  <a href="/users/<%= current_user.username%>">See All</a>
</div>

<div>
  <% current_user.workouts.each do |workout| %>
    <a href="/workouts/<%= workout.slug %>">
      <h4><%= workout.name %></h4>
      <p><%= workout.minutes %> Minutes</p>
    </a>
  <% end %>
</div>

<div>
  <h3>COMMUNITY WORKOUTS</h3>
</div>

<div>
  <% @workouts.reverse.each do |workout| %>
    <a href="/workouts/<%= workout.slug %>">
      <div>
        <div><%= workout.user.user_initials %></div>
        <p><%= workout.name %></p>
        <p>@<%= workout.user.username %></p>
      </div>
    </a>
  <% end %>
</div>